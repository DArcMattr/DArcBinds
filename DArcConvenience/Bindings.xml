  <Binding name="DARC_SMART_DISMOUNT" category="ADDONS">
    if IsMounted() then
      Dismount()
      return
    elseif UnitInVehicle("player") then
      VehicleExit()
      return
	elseif UnitAura("player", "Zen Flight") ~= nil then
	  CancelUnitBuff("player", "Zen Flight")
